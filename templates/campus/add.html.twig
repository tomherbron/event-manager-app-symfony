{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | ajout Campus
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN')%}
    <span class="encadrement-contenu">
    <table class="table align-middle table-hover">
        <thead>
            <tr>
                <th id="tableau-donnees">Nom</th>
                <th id="tableau-donnees">Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for campus in campus %}
            <tr>
                <td id="tableau-donnees">{{ campus.nom }}</td>
                <td id="tableau-donnees">
                    <button class="btn btn-outline-light rounded-0">
                        <a id="tableau-donnees" href="{{ path('campus_update', {'id':campus.id }) }}">modifier</a>
                    </button>
                    <button class="btn btn-outline-danger rounded-0 btn-danger">
                        <a id="tableau-donnees" href="{{ path('campus_delete', {'id':campus.id }) }}">supprimer</a>
                    </button>
                </td>
            </tr>
        {% endfor %}

        <tr>
            <td id="tableau-donnees">
                {{ form_start(campusForm) }}
                {{ form_widget(campusForm) }}
            </td>
            <td id="tableau-donnees">
                <button class="btn btn-outline-success rounded-0 btn-success text-white" type="submit">
                    Ajouter
                </button>
                {{ form_end(campusForm) }}
            </td>
        </tr>

        </tbody>
    </table>
    </span>
    {% else %}
    <br>
    <h2>Vous n'avez pas les droits pour ajouter un campus</h2>
    {% endif %}


{% endblock %}



