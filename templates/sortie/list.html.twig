{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Liste des sorties
{% endblock %}

{% block body %}
    <h2>Liste des sorties</h2>
    <br>
    <div class="table-responsive text-white encadrement-contenu">

        <table class="table table-striped align-middle  table-borderless">
            <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/Places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                {% if sortie.etat.libelle != 'Créée' or  sortie.organisateur.id == app.user.id %}
                    <tr>
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.dateHeureDebut | date('d/m/Y - H:i') }}</td>
                        <td>{{ sortie.dateLimiteInscription | date('d/m/Y') }}</td>
                        <td>{{ sortie.utilisateurs.count }}/{{ sortie.nbMaxInscriptions }}</td>
                        <td>{{ sortie.etat.libelle }}</td>
                        {% if app.user.id in sortie.utilisateurs|map(user => user.id) %}
                            <td>X</td>
                            {%else %}
                            <td> </td>
                        {% endif %}
                        <td>
                            <a href="{{ path('utilisateur_show', {'id':sortie.organisateur.id }) }}">{{ sortie.organisateur.username }}</a>
                        </td>
                        <td>
                            <a href="{{ path('sortie_show', {'id':sortie.id }) }}">Afficher</a>
                            {% if sortie.dateLimiteInscription > date('now') and sortie.nbMaxInscriptions> sortie.utilisateurs.count %}
                                <a href="{{ path('sortie_subscribe', {'id':sortie.id }) }}">S'inscrire</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

